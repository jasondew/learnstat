<h1>Listing announcements</h1>

<table>
  <tr>
  </tr>
  
<% for announcement in @announcements %>
  <tr>
    <td><%= link_to 'Show', announcement_path(announcement) %></td>
    <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
    <td><%= link_to 'Destroy', announcement_path(announcement), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New announcement', new_announcement_path %>
