<h2>New document</h2>

<%= error_messages_for :document %>

<% form_for(:document, :url => documents_path, :html => { :multipart => true } ) do |f| %>

  <label for="label">Label: </label> <%= f.text_field :label %> <br />
  <label for="uploaded_data">File: </label> <%= f.file_field :uploaded_data %> <br />
  <label for="viewable_at">Viewable at: </label> <%= f.datetime_select :viewable_at %> <br />

  <p> <%= submit_tag "Create" %> </p>
<% end %>

<%= link_to 'Back', course_path(@course) %>
